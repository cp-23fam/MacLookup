<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="450"
        x:Class="MacLookup.MainWindow"
        Title="MacLookup"
        Background="#F5F5F5">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">

		<TextBlock Text="Enter a MAC address:" FontSize="18" FontWeight="Bold" Foreground="#333333"/>

		<TextBox x:Name="MacAddressField"
                 Width="300"
                 FontSize="16"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Watermark="10:0D:7F:6D:0E:B5"
                 Background="#FFFFFF"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
				 Text="10:0D:7F:6D:0E:B5"
                 Padding="10"/>

		<Button Content="Lookup"
                Width="150"
                FontSize="16"
                Background="#007BFF"
                Foreground="White"
                HorizontalAlignment="Center"
                Padding="10,5"
                BorderBrush="#007BFF"
                BorderThickness="1"
                CornerRadius="5"
				x:Name="LookupButton"/>

		<TextBlock Name="Result" FontSize="16" Foreground="#555555" HorizontalAlignment="Center" Margin="0,10,0,0"/>

	</StackPanel>
</Window>
